{
    "type": "imaging",
    "comments": "imaging isosurface for main endeavour site",
    "verbose": 1,
    "debug": 0,
    "outpath": "../output",
    "plot_bathy": 1,
    "mask_bathy": 0,
    "figure": 1,

    "view": {
        "azimuth": 170,
        "elevation": 15.0
     },

    "mask": [
        {  "type": "cone",
           "radius": 10,
           "height": 15,
           "x": -30,
           "y": -12,
           "z": 10
        },
        {  "type": "cone",
           "radius": 10,
           "height": 15,
           "x": -5,
           "y": -12,
           "z": 10
        }
    ],

    "isosurface": [
        {  "type": "vss",
           "units": "db",
           "value": -70,
           "color": [0,0,1],
           "alpha": 0.2,
            "bounds": []
        },
        {  "type": "vss",
           "units": "db",
           "value": -60,
           "color": [0.5,0,0.5],
           "alpha": 0.4,
            "bounds": []
        },
        {  "type": "vss",
           "units": "db",
           "value": -50,
           "color": [1,0,0],
           "alpha": 0.6,
           "bounds": [-40,-15,-25,0,10,60]
        }
    ]

}
