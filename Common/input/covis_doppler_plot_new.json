{
    "type": "doppler",
    "comments": "doppler isosurface for main endeavour site",
    "verbose": 1,
    "debug": 0,
    "outpath": "../output",
    "plot_bathy": 1,
    "mask_bathy": 1,
    "figure": 1,

    "view": {
        "azimuth": 170,
        "elevation": 15.0
     },

    "mask": [
 {  "type": "cone",
           "radius": 10,
           "height": 20,
           "x": -30,
           "y": -12,
           "z": 10
        },       {  "type": "cylinder",
           "radius": 10,
           "x": -5,
           "y": -12
        }
            ],

    "isosurface": [
        {  "type": "velocity",
           "units": "m/s",
           "value": 30,
           "color": [0,0,1],
           "alpha": 0.8
        },
        {  "type": "velocity",
           "units": "m/s",
           "value": 20,
           "color": [0.5,0,0.5],
           "alpha": 0.4
        },
        {  "type": "velocity",
           "units": "db",
           "value": 10,
           "color": [1,0,0],
           "alpha": 0.2
        }
    ]

}

