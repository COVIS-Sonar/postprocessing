{
    "type": "imaging",
    "comments": "imaging isosurface for main endeavour site",
    "verbose": 1,
    "debug": 0,
    "outpath": "../output",
    "plot_bathy": 1,
    "mask_bathy": 0,
    "figure": 1,

    "view": {
        "azimuth": 80,
        "elevation": 30.0
     },

    "mask": [
        {  "type": "bathy",
           "offset": 1        
        },
        {  "type": "cylinder",
           "radius": 5,
           "x": -30,
           "y": -12
        },
        {  "type": "cylinder",
           "radius": 10,
           "x": -5,
           "y": -12
        }

    ],

    "isosurface": [
        {  "type": "vss",
           "units": "db",
           "value": -75,
           "color": [0,0,1],
           "alpha": 0.2
        },
        {  "type": "vss",
           "units": "db",
           "value": -65,
           "color": [0.5,0,0.5],
           "alpha": 0.4
        },
        {  "type": "vss",
           "units": "db",
           "value": -55,
           "color": [1,0,0],
           "alpha": 0.6
        }
    ]

}
